<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <property name="decorator-file" value="/WEB_INF/decorator.xml"/>
    <excludes file="${decorators-file}"/>
    
    <page-parsers>
        <parser content-type="text/html" 
            class="com.opensymphony.module.sitemesh.parser.FastPageParser"/>
    </page-parsers>
    
    <decorator-mapper>
        <mapper 
            class="com.opensymphony.module.sitemash.mapper.ConfigDecoratorMapper">
            <param name="config" value="${docorator-file}"/>
        </mapper>
    </decorator-mapper>
</sitemesh>