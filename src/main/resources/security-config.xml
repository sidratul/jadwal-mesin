<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.1.xsd">
           
    <http auto-config='true'>
        <intercept-url pattern="/admin/**" access="ROLE_RECEPTIONIS,ROLE_ADMIN" />
        <form-login login-page="/jadwal/login/" default-target-url="/admin/jadwal/tampil-s1" 
            authentication-failure-url="/aplikasi/login/loginfailed" />
        <logout logout-success-url="/aplikasi/login/logout" />
        <remember-me />
    </http>
    
    <authentication-manager>
        <authentication-provider>
            
            <jdbc-user-service data-source-ref="dataSource"
                users-by-username-query="
                    select Username,Password, Aktif 
                    from user where Username=?"

                authorities-by-username-query="
                    select u.Username, ur.Wewenang from USER u, USER_ROLE ur 
                    where u.ID = ur.ID_User and u.Username =?  " 

            />
        </authentication-provider>
    </authentication-manager>
</beans:beans>
